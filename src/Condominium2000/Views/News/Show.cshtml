@using Condominium2000.Helpers
@using Condominium2000.Resources
@using Condominium2000.Resources.Shared
@model Condominium2000.Models.ViewModels.NewsViewModel

@{
    if (LanguageHelper.GetLanguage() == LanguageHelper.Language.Sv)
    {
        ViewBag.Title = Model.SelectedNews.TitleSv;
    }
    else
    {
        ViewBag.Title = Model.SelectedNews.TitleEn;
    }
}

<div id="content_margin_top">
</div>
<div id="content_center" class="center">
    <div id="content_top">
        <div id="content_margin_left"></div>

        <div id="content_large">
            <div id="news_item_{@Model.SelectedNews.Id}" class="news_item">

                @if (Request.IsAuthenticated)
                {
                    <div class="edit_link">
                        <p>
                            [@Html.ActionLink(EditLabels.LABEL_EDIT_NEWS, "Edit", new {id = Model.SelectedNews.Id})]
                        </p>
                    </div>
                    <div class="delete_link">
                        <p>
                            [@Html.ActionLink(EditLabels.LABEL_DELETE_NEWS, "Delete", new {id = Model.SelectedNews.Id})]
                        </p>
                    </div>
                }
                <h1>
                    @Html.ReturnLanguageContent(Model.SelectedNews, TableContent.Title)
                </h1>

                <h3>
                    @Model.SelectedNews.DateCreated
                </h3>
                <div class="news_item_divider"></div>
                <div class="default_html">
                    @Html.Raw(Html.ReturnLanguageContent(Model.SelectedNews, TableContent.HtmlContent))
                </div>
            </div>
        </div>
        <div id="content_margin_middle"></div>
        <div id="content_small">
            <div id="sidebar_inf" class="sidebar_inf">
                @Html.Partial("_AnnouncementPartial", Model.SelectedAnnouncement)
            </div>
            <div class="sidebar_margin_s"></div>
            <div id="sidebar_menu" class="sidebar_menu">
                @Html.Partial("_FrequentlyAskedQuestionsPartial", Model.Questions)
            </div>
        </div>
    </div>
    <div id="content_bottom" class="side_border">
        <div id="bottom_fast_links" class="quick_navigation">
            <div id="fl_divider">
                <div class="fl_divider"></div>
            </div>
            <div id="fl_space"></div>
            <div id="fl_news">
                @Html.ActionLinkBack(ContentBottom.BACK)
            </div>
            @Html.ActionLinkTop(ContentBottom.TOP)
        </div>
    </div>
</div>