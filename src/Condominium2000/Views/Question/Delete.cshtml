@using Condominium2000.Helpers
@using Condominium2000.Resources
@using Condominium2000.Resources.Question
@using Condominium2000.Resources.Shared
@model Condominium2000.Models.Question

@{
    ViewBag.Title = Delete.VIEW_BAG_TITLE;
}

<div id="content_margin_top"></div>
<div id="content_center" class="center">
    <div id="content_top">
        <div id="content_margin_left_xl"></div>
        <div id="content_full">
            <div class="default_info">
                <p class="default_info">
                    @Delete.TEXT_HELP_1
                </p>

                <br/>
                <div class="default_success">
                    @TempData["QuestionDeleted"]
                </div>

                <div class="default_error">
                    @Html.ValidationSummary(true, Delete.ERROR_DELETE)
                </div>
                <br/>

                <fieldset>
                    <legend>@Delete.TEXT_DELETE</legend>
                    <div class="default_content">
                        <br/>
                        <div class="editor-label">
                            @Translation.LABEL_TITLE_SV
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.TitleSv, new {disabled = "disabled"})
                        </div>

                        <br/>
                        <div class="editor-label">
                            @Translation.LABEL_TITLE_EN
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.TitleEn, new {disabled = "disabled"})
                        </div>

                        <br/>
                        <div class="editor-label">
                            @Translation.LABEL_CONTENT_SV
                        </div>
                        <div class="editor-field">
                            @Html.TextAreaFor(m => m.ContentSv, new {disabled = "disabled"})
                        </div>

                        <br/>
                        <div class="editor-label">
                            @Translation.LABEL_CONTENT_EN
                        </div>
                        <div class="editor-field">
                            @Html.TextAreaFor(m => m.ContentEn, new {disabled = "disabled"})
                        </div>

                        <br/>
                        <div class="editor-label">
                            @Translation.LABEL_DATE_CREATED
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.DateCreated, new {disabled = "disabled"})
                        </div>

                        <br/>
                        <div class="editor-label">
                            @SharedLabels.LABEL_IS_FRQ
                        </div>
                        <div class="editor-field">
                            @Html.CheckBoxFor(m => m.IsFrq, new {disabled = "disabled"})
                            @Html.ValidationMessageFor(m => m.IsFrq)
                        </div>

                        <br/>
                        <div class="editor-label">
                            @SharedLabels.LABEL_LIST_PRIORITY
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.ListPriority, new {disabled = "disabled"})
                            @Html.ValidationMessageFor(m => m.ListPriority)
                        </div>
                    </div>
                </fieldset>
                <br/>
                @using (Html.BeginForm())
                {
                    <p>
                        <input type="submit" value="@Delete.BUTTON_DELETE"/>
                    </p>
                }
            </div>
        </div>
    </div>
    <div id="content_bottom" class="side_border">
        <div id="bottom_fast_links" class="quick_navigation">
            <div id="fl_divider">
                <div class="fl_divider"></div>
            </div>
            <div id="fl_space"></div>
            <div id="fl_news">
                @Html.ActionLink(ContentBottom.BACK, "AdminQuestions", new {})
            </div>
            @Html.ActionLinkTop(ContentBottom.TOP)
        </div>
    </div>
</div>