@using Condominium2000.Helpers
@using Condominium2000.Helpers.Models
@using Condominium2000.Resources
@using Condominium2000.Resources.Contact
@using Condominium2000.Resources.Shared
@model Condominium2000.Models.ViewModels.ContactViewModel

@{
    ViewBag.Title = BoardForm.VIEW_BAG_TITLE;
}

<div id="content_margin_top">
</div>
<div id="content_center" class="center">
    <div id="content_top">
        <div id="content_margin_left">
        </div>
        <div id="content_small">
            <div id="sidebar_menu" class="sidebar_menu">
                @Html.Partial("_SubMenuPartial", ContactHelper.SubMenu.BoardForm)
                <div class="sidebar_menu_divider"></div>
            </div>
        </div>
        <div id="content_margin_middle"></div>
        <div id="content_large">
            <div id="default_info" class="default_info">
                <div class="sidebar_margin_xl"></div>
                @if (Request.IsAuthenticated)
                {
                    <div class="edit_link">
                        <p>
                            [@Html.ActionLink(EditLabels.LABEL_EDIT_BOARD_FORM_INFO, "EditBoardFormInfo", new {id = Model.ContactTemplate.SelectedBoardFormInfo.Id})]
                        </p>
                    </div>
                    <br/>
                }
                <div class="default_html">
                    @Html.Raw(Html.ReturnLanguageContent(Model.ContactTemplate.SelectedBoardFormInfo, TableContent.HtmlContent))
                </div>
                <br/>
            </div>

            <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

            <div class="default_error">
                @Html.ValidationSummary(true, SharedErrors.ERROR_FORM_INFO)
            </div>

            @using (Html.BeginForm("BoardForm", "Contact", FormMethod.Post, new {@class = "form"}))
            {
                @Html.EditorFor(c => c.BoardForm)

                <br/>
                <p class="submit">
                    <input type="submit" value="@Translation.BUTTON_SEND"/>
                </p>
            }
        </div>
    </div>
    <div id="content_bottom" class="side_border">
        <div id="bottom_fast_links" class="quick_navigation">
            <div id="fl_divider">
                <div class="fl_divider"></div>
            </div>
            <div id="fl_space"></div>
            <div id="fl_news">
                @Html.ActionLinkBack(ContentBottom.BACK)
            </div>
            @Html.ActionLinkTop(ContentBottom.TOP)
        </div>
    </div>
</div>