@using Condominium2000.Helpers
@using Condominium2000.Resources
@using Condominium2000.Resources.BoardMember
@model Condominium2000.Models.BoardMember

@{
    ViewBag.Title = Create.VIEW_BAG_TITLE;
}

<div id="content_margin_top"></div>
<div id="content_center" class="center">
    <div id="content_top">
        <div id="content_margin_left_xl"></div>
        <div id="content_full">
            <div class="default_info">
                <p class="default_info_a">
                    @Create.TEXT_HELP_1
                </p>

                <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
                <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

                <br/>
                <div class="default_success">
                    @TempData["CreateBoardMemberSuccess"]
                </div>

                <div class="default_error">
                    @Html.ValidationSummary(true, Create.ERROR_CREATE_BOARD_MEMBER)
                </div>

                <br/>
                @using (Html.BeginForm())
                {
                    <fieldset>
                        <legend>@Create.TEXT_CREATE_BOARD_MEMBER</legend>
                        <div class="default_content">
                            <br/>
                            <div class="editor-label">
                                @SharedLabels.LABEL_NAME
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.Name)
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @SharedLabels.LABEL_LIST_PRIORITY
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.ListPriority)
                                @Html.ValidationMessageFor(m => m.ListPriority)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @SharedLabels.LABEL_POSITION_SV
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.PositionSv)
                                @Html.ValidationMessageFor(m => m.PositionSv)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @SharedLabels.LABEL_POSITION_EN
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.PositionEn)
                                @Html.ValidationMessageFor(m => m.PositionEn)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @SharedLabels.LABEL_EMAIL
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.Mail)
                                @Html.ValidationMessageFor(m => m.Mail)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @SharedLabels.LABEL_MOBILE_NR
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.MobileNr)
                                @Html.ValidationMessageFor(m => m.MobileNr)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @SharedLabels.LABEL_IS_ORDINARY
                            </div>
                            <div class="editor-field">
                                @Html.CheckBoxFor(m => m.IsOrdinary)
                                @Html.ValidationMessageFor(m => m.IsOrdinary)
                            </div>

                            <br/>
                            <p>
                                <input type="submit" value="@Create.BUTTON_SAVE"/>
                            </p>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
    <div id="content_bottom" class="side_border">
        <div id="bottom_fast_links" class="quick_navigation">
            <div id="fl_divider">
                <div class="fl_divider"></div>
            </div>
            <div id="fl_space"></div>
            <div id="fl_news">
                @Html.ActionLink(ContentBottom.BACK, "AdminBoardMembers")
            </div>
            @Html.ActionLinkTop(ContentBottom.TOP)
        </div>
    </div>
</div>