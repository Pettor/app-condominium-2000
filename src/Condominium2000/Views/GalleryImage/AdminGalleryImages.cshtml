@using Condominium2000.Helpers
@using Condominium2000.Resources
@using Condominium2000.Resources.GalleryImage
@model List<Condominium2000.Models.GalleryImage>

@{
    ViewBag.Title = AdminGalleryImages.VIEW_BAG_TITLE;
}

<div id="content_margin_top"></div>
<div id="content_center" class="center">
    <div id="content_top">
        <div id="content_margin_left_xl"></div>
        <div id="content_full">
            <div class="default_info">
                <p class="default_info">
                    @AdminGalleryImages.TEXT_HELP_1
                </p>

                <br/>
                <fieldset>
                    <legend>@AdminGalleryImages.TEXT_ADMIN_GALLERY_IMAGE</legend>
                    <br/>
                    <div class="default_content">
                        <table class="admin_table">
                            <tr class="admin_table_header">
                                <td>
                                    @AdminGalleryImages.TABLE_NAME
                                </td>
                                <td>
                                    @AdminGalleryImages.TABLE_TYPE
                                </td>
                                <td>
                                    @AdminGalleryImages.TABLE_SIZE
                                </td>
                                <td>
                                    @AdminGalleryImages.TABLE_ORDER
                                </td>
                                <td></td>
                                <td></td>
                            </tr>

                            @* Var even: switch between even and odd table layout *@
                            @{ var IsEven = true; }

                            @foreach (var galleryImage in Model)
                            {
                                @* Start tag *@
                                @Html.SwitchTable("admin_table_even", "admin_table_odd", ref IsEven)
                                <td>
                                    @galleryImage.ImageName
                                </td>
                                <td>
                                    @galleryImage.FileType
                                </td>
                                <td>
                                    @FileHelper.DisplaySize(galleryImage.FileSize)
                                </td>
                                <td>
                                    @galleryImage.ListPriority
                                </td>
                                <td>
                                    @Html.ActionLink(AdminGalleryImages.BUTTON_EDIT_GALLERY_IMAGE, "Edit", new {id = galleryImage.Id}, new {@class = "button_default"})
                                </td>
                                <td>
                                    @Html.ActionLink(AdminGalleryImages.BUTTON_DELETE_GALLERY_IMAGE, "Delete", new {id = galleryImage.Id}, new {@class = "button_default"})
                                </td>

                                @* Closing tag *@
                                @:</tr>
                            }
                        </table>
                        <br/><br/>
                        <p>
                            @Html.ActionLink(AdminGalleryImages.BUTTON_CREATE_GALLERY_IMAGE, "Create", new {controller = "GalleryImage"}, new {@class = "button_default"})
                        </p>
                        <br/>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
    <div id="content_bottom" class="side_border">
        <div id="bottom_fast_links" class="quick_navigation">
            <div id="fl_divider">
                <div class="fl_divider"></div>
            </div>
            <div id="fl_space"></div>
            <div id="fl_news">
                @Html.ActionLinkBack(ContentBottom.BACK)
            </div>
            @Html.ActionLinkTop(ContentBottom.TOP)
        </div>
    </div>
</div>