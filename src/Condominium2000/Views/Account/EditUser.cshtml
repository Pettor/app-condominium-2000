@using Condominium2000.Helpers
@using Condominium2000.Resources
@using Condominium2000.Resources.Account
@model Condominium2000.Models.EditUserModel

@{
    ViewBag.Title = EditUser.VIEW_BAG_TITLE;
}

<div id="content_margin_top"></div>
<div id="content_center" class="center">
    <div id="content_top">
        <div id="content_margin_left_xl"></div>
        <div id="content_full">
            <div class="default_info">

                <p class="default_info_a">
                    @EditUser.TEXT_HELP_1
                </p>
                <div class="default_success">
                    @TempData["ResetSuccess"]
                </div>

                <div class="default_error">
                    @TempData["ResetError"]
                </div>
                <br/>

                <fieldset>
                    @* FIX RESOURCE *@
                    <legend>Lösenord och Roll</legend>
                    <div class="default_content">
                        <br/>
                        @Html.ActionLink("Återställ Lösenord", "ResetPassword", new {controller = "Account", Username = Model.UserName}, new {@class = "button_default"})

                        <br/><br/><br/>
                        @Html.ActionLink("Växla Roll", "ChangeRole", new {controller = "Account", Username = Model.UserName}, new {@class = "button_default"})
                        <br/>
                        <br/>
                    </div>
                </fieldset>
                <br/>
                <br/>

                <p class="default_info_a">
                    @EditUser.TEXT_HELP_1
                </p>

                <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
                <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

                <br/>
                <div class="default_success">
                    @TempData["EditUserSuccess"]
                </div>

                <div class="default_error">
                    @Html.ValidationSummary(true, EditUser.ERROR_EDIT_USER)
                </div>

                <br/>
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(m => m.UserId)
                    <fieldset>
                        <legend>@EditUser.TEXT_EDIT_USER</legend>
                        <div class="default_content">
                            <br/>
                            <div class="editor-label">
                                @EditUser.LABEL_USER_NAME
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.UserName)
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @EditUser.LABEL_EMAIL
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.Email)
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @EditUser.LABEL_FIRST_NAME
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.FirstName)
                                @Html.ValidationMessageFor(m => m.FirstName)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @EditUser.LABEL_LAST_NAME
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.LastName)
                                @Html.ValidationMessageFor(m => m.LastName)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @EditUser.LABEL_IS_APPROVED
                            </div>
                            <div class="editor-field">
                                @Html.CheckBoxFor(m => m.IsApproved)
                                @Html.ValidationMessageFor(m => m.IsApproved)
                            </div>

                            <br/>
                            <p>
                                <input type="submit" value="@EditUser.BUTTON_SAVE"/>
                            </p>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
    <div id="content_bottom" class="side_border">
        <div id="bottom_fast_links" class="quick_navigation">
            <div id="fl_divider">
                <div class="fl_divider"></div>
            </div>
            <div id="fl_space"></div>
            <div id="fl_news">
                @Html.ActionLink(ContentBottom.BACK, "AdminUsers", "Account")
            </div>
            @Html.ActionLinkTop(ContentBottom.TOP)
        </div>
    </div>
</div>