@using Condominium2000.Helpers
@using Condominium2000.Resources
@using Condominium2000.Resources.Account
@model Condominium2000.Models.User

@{
    ViewBag.Title = DeleteUser.VIEW_BAG_TITLE;
}

<div id="content_margin_top"></div>
<div id="content_center" class="center">
    <div id="content_top">
        <div id="content_margin_left_xl"></div>
        <div id="content_full">
            <div class="default_info">

                <p class="default_info_a">
                    @DeleteUser.TEXT_HELP_1
                </p>

                <br/>
                <div class="default_success">
                    @TempData["DeleteUserSuccess"]
                </div>

                <div class="default_error">
                    @Html.ValidationSummary(true, DeleteUser.ERROR_DELETE_USER)
                </div>

                <br/>

                <fieldset>
                    <legend>@DeleteUser.TEXT_DELETE_USER</legend>
                    <div class="default_content">
                        <br/>
                        <div class="editor-label">
                            @DeleteUser.LABEL_USER_NAME
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.Username, new {disabled = "disabled"})
                        </div>

                        <br/>
                        <div class="editor-label">
                            @DeleteUser.LABEL_EMAIL
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.Email, new {disabled = "disabled"})
                        </div>

                        <br/>
                        <div class="editor-label">
                            @DeleteUser.LABEL_FIRST_NAME
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.FirstName, new {disabled = "disabled"})
                        </div>

                        <br/>
                        <div class="editor-label">
                            @DeleteUser.LABEL_LAST_NAME
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.LastName, new {disabled = "disabled"})
                        </div>

                        <br/>
                        <div class="editor-label">
                            @DeleteUser.LABEL_IS_APPROVED
                        </div>
                        <div class="editor-field">
                            @Html.CheckBoxFor(m => m.IsApproved, new {disabled = "disabled"})
                        </div>

                        <br/>
                        <div class="editor-label">
                            @DeleteUser.LABEL_ROLE
                        </div>
                        <div class="editor_field">
                            @Html.TextBox("Role", Model.Roles.FirstOrDefault().RoleName, new {disabled = "disabled"})
                        </div>
                    </div>
                </fieldset>
                @using (Html.BeginForm())
                {
                    <p>
                        <input type="submit" value="@DeleteUser.BUTTON_DELETE"/>
                    </p>
                }
            </div>
        </div>
    </div>
    <div id="content_bottom" class="side_border">
        <div id="bottom_fast_links" class="quick_navigation">
            <div id="fl_divider">
                <div class="fl_divider"></div>
            </div>
            <div id="fl_space"></div>
            <div id="fl_news">
                @Html.ActionLink(ContentBottom.BACK, "AdminUsers", "Account")
            </div>
            @Html.ActionLinkTop(ContentBottom.TOP)
        </div>
    </div>
</div>