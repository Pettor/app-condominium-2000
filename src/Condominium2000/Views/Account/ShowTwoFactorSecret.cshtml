@using Condominium2000.Helpers
@using Condominium2000.Resources
@using Condominium2000.Resources.Account
@model Condominium2000.Models.TwoFactorSecret

@{
    ViewBag.Title = "ShowTwoFactorSecret";
}

<div id="content_margin_top"></div>
<div id="content_center" class="center">
    <div id="content_top">
        <div id="content_margin_left_xl"></div>
        <div id="content_full">
            <div id="default_info" class="default_info">

                <p>
                    @TwoFactor.LABEL_DESCRIPTION
                </p>
                <p>
                    @Html.QrCode(string.Format("otpauth://totp/MY_APP_LABEL?secret={0}", Model.EncodedSecret))
                </p>
                <p>
                    @Model.EncodedSecret
                </p>
            </div>
        </div>
    </div>
    <div id="content_bottom" class="side_border">
        <div id="bottom_fast_links" class="quick_navigation">
            <div id="fl_divider">
                <div class="fl_divider"></div>
            </div>
            <div id="fl_space"></div>
            <div id="fl_news">
                @Html.ActionLink(ContentBottom.BACK, "Index", "News")
            </div>
            @Html.ActionLinkTop(ContentBottom.TOP)
        </div>
    </div>
</div>