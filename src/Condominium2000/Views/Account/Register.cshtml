@using Condominium2000.Helpers
@using Condominium2000.Resources
@using Condominium2000.Resources.Account
@using Condominium2000.Resources.Shared
@model Condominium2000.Models.RegisterModel

@{
    ViewBag.Title = Register.VIEW_BAG_TITLE;
}

<div id="content_margin_top"></div>
<div id="content_center" class="center">
    <div id="content_top">
        <div id="content_margin_left_xl"></div>
        <div id="content_full">
            <div class="default_info">
                <p class="default_info">
                    @Register.TEXT_HELP_1
                    @Register.TEXT_HELP_2
                </p>

                <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
                <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

                <br/>
                <div class="default_success">
                    @TempData["CalculationSuccess"]
                </div>

                <div class="default_error">
                    @Html.ValidationSummary(true, Register.ERROR_REGISTER)
                </div>
                <br/>

                @using (Html.BeginForm())
                {
                    <fieldset>
                        <legend>@Register.TEXT_ACCOUNT</legend>
                        <div class="default_content">
                            <br/>
                            <div class="editor-label">
                                @Register.LABEL_USER_NAME
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.UserName)
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @Register.LABEL_EMAIL
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.Email)
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @Register.LABEL_PASSWORD
                            </div>
                            <div class="editor-field">
                                @Html.PasswordFor(m => m.Password)
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @Register.LABEL_PASSWORD_CONFIRM
                            </div>
                            <div class="editor-field">
                                @Html.PasswordFor(m => m.ConfirmPassword)
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @Register.LABEL_FIRST_NAME
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.FirstName)
                                @Html.ValidationMessageFor(m => m.FirstName)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @Register.LABEL_LAST_NAME
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.LastName)
                                @Html.ValidationMessageFor(m => m.LastName)
                            </div>

                            <br/>
                            @Translation.LABEL_RECAPTCHA
                            @ReCaptcha.GetHtml(publicKey: Constants.RecaptchaPublicKey, theme: "white")

                            <br/>
                            <p>
                                <input type="submit" value="@Register.BUTTON_REGISTER"/>
                            </p>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
    <div id="content_bottom" class="side_border">
        <div id="bottom_fast_links" class="quick_navigation">
            <div id="fl_divider">
                <div class="fl_divider"></div>
            </div>
            <div id="fl_space"></div>
            <div id="fl_news">
                @Html.ActionLink(ContentBottom.BACK, "LogOn", new {})
            </div>
            @Html.ActionLinkTop(ContentBottom.TOP)
        </div>
    </div>
</div>