@using Condominium2000.Helpers
@using Condominium2000.Resources
@using Condominium2000.Resources.Account
@model Condominium2000.Models.LogOnModel

@{
    ViewBag.Title = LogOn.VIEW_BAG_TITLE;
}

<div id="content_margin_top"></div>
<div id="content_center" class="center">
    <div id="content_top">
        <div id="content_margin_left_xl"></div>
        <div id="content_full">
            <div id="default_info" class="default_info">
                <p class="default_info_a">
                    @LogOn.TEXT_HELP_1
                    <br/>
                    <b>@LogOn.TEXT_HELP_2</b>
                </p>

                <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
                <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

                <br/>
                <div class="default_success">
                    @TempData["CalculationSuccess"]
                </div>

                <div class="default_error">
                    @Html.ValidationSummary(true, LogOn.ERROR_LOG_IN)
                </div>
                <br/>

                @using (Html.BeginForm())
                {
                    <fieldset>
                        <legend>@LogOn.TEXT_ACCOUNT_INFO</legend>
                        <div class="default_content">
                            <br/>
                            <div class="editor-label">
                                @LogOn.LABEL_USER_NAME
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.UserName)
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>

                            <br/>
                            <div class="editor-label">
                                @LogOn.LABEL_PASSWORD
                            </div>
                            <div class="editor-field">
                                @Html.PasswordFor(m => m.Password)
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>

                            @*<br />
                            <div class="editor-label">
                                @Condominium2000.Resources.Account.LogOn.LABEL_TWO_FACTOR
                            </div>
                            <div class="editor-field">
                                @Html.PasswordFor(m => m.TwoFactorCode)
                                @Html.ValidationMessageFor(m => m.TwoFactorCode)
                            </div>*@

                            <br/>
                            <br/>
                            <div>
                                @LogOn.LABEL_REMEMBER_ME
                                @Html.CheckBoxFor(m => m.RememberMe, new {@class = "default_checkbox"})
                            </div>

                            <br/>
                            <p>
                                <input type="submit" value="@LogOn.BUTTON_LOG_IN"/>
                            </p>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
    <div id="content_bottom" class="side_border">
        <div id="bottom_fast_links" class="quick_navigation">
            <div id="fl_divider">
                <div class="fl_divider"></div>
            </div>
            <div id="fl_space"></div>
            <div id="fl_news">
                @Html.ActionLink(ContentBottom.BACK, "Index", "News")
            </div>
            @Html.ActionLinkTop(ContentBottom.TOP)
        </div>
    </div>
</div>