@using Condominium2000.Helpers
@using Condominium2000.Resources
@using Condominium2000.Resources.Account
@model Condominium2000.Models.ChangePasswordModel

@{
    ViewBag.Title = ChangePassword.VIEW_BAG_TITLE;
}

<div id="content_margin_top"></div>
<div id="content_center" class="center">
    <div id="content_top">
        <div id="content_margin_left_xl"></div>
        <div id="content_full">
            <div class="default_info">

                <p class="default_info_a">
                    @ChangePassword.TEXT_HELP_1
                </p>

                <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
                <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

                <div class="default_error">
                    @Html.ValidationSummary(true, ChangePassword.ERROR_CHANGE_PASSWORD)
                </div>

                <br/>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
                    <div>
                        <fieldset>
                            <legend>@ChangePassword.TEXT_CHANGE_PASSWORD</legend>

                            <div class="default_content">
                                <br/>
                                <div class="editor-label">
                                    @ChangePassword.LABEL_OLD_PASSWORD
                                </div>
                                <div class="editor-field">
                                    @Html.PasswordFor(m => m.OldPassword)
                                    @Html.ValidationMessageFor(m => m.OldPassword)
                                </div>

                                <br/>
                                <div class="editor-label">
                                    @ChangePassword.LABEL_NEW_PASSWORD
                                </div>
                                <div class="editor-field">
                                    @Html.PasswordFor(m => m.NewPassword)
                                    @Html.ValidationMessageFor(m => m.NewPassword)
                                </div>

                                <br/>
                                <div class="editor-label">
                                    @ChangePassword.LABEL_CONFIRM_PASSWORD
                                </div>
                                <div class="editor-field">
                                    @Html.PasswordFor(m => m.ConfirmPassword)
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                </div>

                                <br/>
                                <p>
                                    <input type="submit" value="@ChangePassword.BUTTON_SAVE"/>
                                </p>
                            </div>
                        </fieldset>
                    </div>
                }
            </div>
        </div>
    </div>
    <div id="content_bottom" class="side_border">
        <div id="bottom_fast_links" class="quick_navigation">
            <div id="fl_divider">
                <div class="fl_divider"></div>
            </div>
            <div id="fl_space"></div>
            <div id="fl_news">
                @Html.ActionLinkBack(ContentBottom.BACK)
            </div>
            @Html.ActionLinkTop(ContentBottom.TOP)
        </div>
    </div>
</div>